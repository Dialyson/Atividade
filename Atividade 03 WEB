    <script>
      function texto(){
      alert("!! Informe os campo com inicial MAIUSCULA !!")
      }

      function soma(){
      var nome = calculo.nome.value;
      var cargo = calculo.n1.value;
      var num = calculo.n2.value;
      var total = 0;
      var aumento = 0;
      
      if (nome == "") {
        alert("Informe o seu nome!")
      } else {
        
      }

            if (cargo == "Atendente"){
                aumento = 0.08
            } else if(cargo == "Estoquista"){
                aumento = 0.06
            }else if(cargo == "Gerente"){
                aumento = 0.02
            }else {
              alert("Informe um dos cargos da tabela!")   
            }
            
            if (num <= 1045.00){
                total = parseFloat(num) - (parseFloat(num) * 0.08) + (parseFloat(num)*aumento);
            } else if(num>1045.01 && num<=2080.60){                
                total = parseFloat(num) - (parseFloat(num) * 0.06) + (parseFloat(num)*aumento);
            } else if(num>2080.60 && num<=3134.40){                
                total = parseFloat(num) - (parseFloat(num) * 0.02) + (parseFloat(num)*aumento);
            }else{
              alert("Informe um valor que esteja na tabela!")
          
            }            
            alert(nome+" o resultado é: R$"+total )
                    
          }
    </script>
</head>
